<mvc:View
    controllerName="ainvoicer.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:mdc="sap.ui.mdc"
    xmlns:macro="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:mdct="sap.ui.mdc.table"
    height="100%"
    xmlns:u="sap.ui.unified"
>
    <Page title="Invoices">
        <content>
            <Table
                id="invoiceTable"
                inset="false"
                items="{
                    path: '/ZC_FI_ACDOCA',
                    parameters: {
                    countMode: 'Request'
                    }
                }"
            >
                <headerToolbar>
                    <Toolbar>
                        <ToolbarSpacer />
                        <ToolbarSeparator />
                        <Button
                            id="addButton"
                            text="Add"
                            type="Emphasized"
                            press="onAddButton"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Company Code" />
                    </Column>
                    <Column>
                        <Text text="Fiscal Year" />
                    </Column>
                    <Column>
                        <Text text="Document Number" />
                    </Column>
                    <Column>
                        <Text text="Line Item" />
                    </Column>
                    <Column>
                        <Text text="Posting Date" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{CompanyCode}" />
                            <Text text="{FiscalYear}" />
                            <Text text="{DocumentNo}" />
                            <Text text="{LineItem}" />
                            <Text text="{PostingDate}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
